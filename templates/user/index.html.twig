{% extends 'base.html.twig' %}

{% block title %}{{ 'listeUser'|trans }}{% endblock %}

{% block body %}
    <h1 class="display-5 text-center">{{ 'listeUser'|trans }}</h1>

    <table class="table table-bordered table-hover blanc">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'profil.role'|trans }}</th>
                <th>{{ 'profil.nom'|trans }}</th>
                <th>{{ 'profil.Prenom'|trans }}</th>
                <th>{{ 'profil.inscription'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateInscription|date('d/m/Y H:i') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'noUser'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
