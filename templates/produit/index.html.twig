{% extends 'base.html.twig' %}

{% block title %}Liste produits{% endblock %}

{% block body %}
    <h1 class="display-5">Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>
                <td> 
                    {% if produit.photo is not null %}
                        <img src="{{ asset('/uploads/' ~ produit.photo) }}" alt="{{ produit.nom }}" style="max-width: 38px;">
                    {% else %}
                        <div class="fst-italic">Pas de photo</div>
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-outline-primary" href="{{ path('produit_show', {'id': produit.id}) }}">Show</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-outline-warning" href="{{ path('produit_edit', {'id': produit.id}) }}">Edit</a>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    {% endif %}
    
    <a class="btn btn-outline-success" href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
