{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <a class="btn btn-outline-primary" href="{{ path('produit_index') }}">< Back to list</a>
    <h1 class="text-center display-5">Produit</h1>

    <div class="row justify-content-center mt-4">
        <div class="card bg-dark p-0" style="width: 25rem;">
            {% if produit.photo is not null %}
                <img class="card-img-top" src="{{ asset('/uploads/' ~ produit.photo) }}" alt="{{ produit.nom }}">
            {% else %}
                <img class="card-img-top" src="{{ asset('/uploads/89342bcsu342.png') }}">
            {% endif %}
            <div class="card-header">
                <h1 class="text-center">{{ produit.nom }}</h&>
            </div>
            <div class="card-body">
                <div class="card-text">
                    {% if produit.description is not null %}
                        {{ produit.description }}
                    {% else %}
                        <div class="fst-italic">Pas de description</div>
                    {% endif %}
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <div>{{ produit.stock }} exemplaire(s) en stock</div>
                    <div>{{ produit.prix }}â‚¬</div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-outline-success" href="">Ajouter au panier</a>
                    {% else %}
                        <a class="btn btn-outline disabled" href="">Ajouter au panier</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-outline-warning mx-2" href="{{ path('produit_edit', {'id': produit.id}) }}">Edit</a>
            {{ include('produit/_delete_form.html.twig') }}
        </div>
    {% endif %}

{% endblock %}
